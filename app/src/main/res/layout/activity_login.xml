<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4c4c4c"
    tools:context="com.example.phanngocyen.cinemabox.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:gravity="center"
        android:text="SHARE FILMS"
        android:textColor="#fff"
        android:textSize="40dp" />
    <EditText
        android:textColor="#4c4c4c"
        android:textColorHint="#4c4c4c"
        android:layout_marginHorizontal="25px"
        android:background="@drawable/custom_button_simple"
        android:id="@+id/edtEmail"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#4c4c4c"
        android:textColorHint="#4c4c4c"
        android:layout_marginHorizontal="25px"
        android:layout_marginTop="15px"
        android:background="@drawable/custom_button_simple"
        android:id="@+id/edtPassword"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25px"
        android:gravity="right"
        android:text="Forgot Password ?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnLogin"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:layout_marginHorizontal="25px"
        android:background="@drawable/custom_button"
        android:textSize="20dp"
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:paddingTop="40px"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/loginFb"
            android:background="@null"
            android:src="@drawable/login_fb"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/loginGoogle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/login_google" />
    </LinearLayout>

    <TextView
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:gravity="center"
        android:text="Not a member? Sign up now!" />
</LinearLayout>
